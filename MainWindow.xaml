        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="nametxt" HorizontalAlignment="Left" Margin="277,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Height="44"/>
        <PasswordBox x:Name="passtxt" HorizontalAlignment="Left" Margin="277,244,0,0"  VerticalAlignment="Top" Width="305" Height="44"/>
        <Label Content="UserName" FontSize="15" HorizontalAlignment="Left" Margin="277,127,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" FontSize="15" HorizontalAlignment="Left" Margin="277,214,0,0" VerticalAlignment="Top"/>
        <Button Content="Login" FontSize="20" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Height="38" Width="124" Click="loginbtn_Click"/>

    </Grid>
</Window>
